{
  "name": "eventlite",
  "description": "Lightweight Eventbrite",
  "version": "2.0.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "eslint": "eslint '**/*.{js,jsx,ts,tsx,json}'",
    "lint": "npm run eslint && npm run prettier -- --check",
    "lint:fix": "npm run eslint -- --fix && npm run prettier -- --write",
    "postbuild": "rm -rf build && mkdir build",
    "poststart": "echo eventlite.tlvince.com > build/CNAME",
    "prestart": "npm run build",
    "prettier": "prettier '**/*.{js,jsx,ts,tsx,json,css,md}'",
    "start": "node -r dotenv/config dist/index.js > build/index.html",
    "test": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tlvince/eventlite.git"
  },
  "keywords": [
    "lightweight",
    "eventbrite"
  ],
  "author": "Tom Vincent",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tlvince/eventlite/issues"
  },
  "homepage": "https://eventlite.tlvince.com",
  "engines": {
    "npm": ">=6.12",
    "node": ">=10"
  },
  "dependencies": {
    "date-fns": "2.8.1",
    "delay": "4.3.0",
    "p-series": "2.1.0",
    "querystringify": "2.1.1",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "simple-get-promise": "2.0.1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "8.2.0",
    "@types/node": "12.12.14",
    "@types/react": "16.9.16",
    "commitlint": "8.2.0",
    "dotenv": "8.2.0",
    "eslint": "6.7.2",
    "eslint-config-tlvince": "2.0.28",
    "eslint-plugin-react": "7.17.0",
    "husky": "3.1.0",
    "lint-staged": "9.5.0",
    "prettier": "1.19.1",
    "typescript": "3.7.3"
  }
}
